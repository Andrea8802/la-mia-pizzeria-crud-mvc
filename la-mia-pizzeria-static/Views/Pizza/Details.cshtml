@model Pizza

<div class="container">
        <div class="card">
        <img src="@Model.Img" alt="Pizza1">
            <div class="card-body">
            <h5 class="card-title">@Model.Nome</h5>
                <p class="card-text">
                @Model.Descrizione
                </p>
            <h6>@Model.Prezzo&euro;</h6>
            <p>
                <strong>Categoria:</strong>

                @if (Model.Category != null)
                {
                    @Model.Category.Nome
                }
                else
                {
                    <span>Non ci sono categorie selezionate!</span>
                }
            </p>
            </div>
        </div>
</div>